<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:endColor="#EF0000"
                android:startColor="#7600CA" />
            <stroke
                android:width="4dp"
                android:color="#00F0F0F0" />
            <size
                android:width="25dp"
                android:height="25dp" />
        </shape>
    </item>

</layer-list>