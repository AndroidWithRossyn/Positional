<resources>
    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Theme -->
        <item name="mainBackground">#F6F6F6</item>
        <item name="iconColor">#D63131</item>
        <item name="textSecondary">#AAAAAA</item>
        <item name="textPrimary">#676767</item>
        <item name="dividerColor">#E4E4E4</item>
    </style>

    <style name="popupMenu" parent="@style/Widget.MPM.Menu">
        <item name="android:popupBackground">@drawable/bg_menu</item>
        <item name="mpm_activeIconColor">?attr/iconColor</item>
        <item name="mpm_primaryTextColor">?attr/textPrimary</item>
        <item name="mpm_secondaryTextColor">?attr/textSecondary</item>
        <item name="mpm_separatorColor">?attr/dividerColor</item>
    </style>

</resources>