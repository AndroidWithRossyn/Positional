<resources>
    <!-- Base application theme. -->
    <style name="Positional" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAppAccent">@color/positional</item>
        <item name="colorAppAccentLight">@color/positional_light</item>

        <!-- Theme -->
        <item name="rippleColor">@color/rippleColor</item>
        <item name="android:navigationBarColor">@color/toolbarBackground</item>
        <item name="android:colorEdgeEffect">?attr/colorAppAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_dialog_out</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_dialog_out</item>
    </style>

    <style name="SecondaryTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/light</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="PrimaryTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/light</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

</resources>
