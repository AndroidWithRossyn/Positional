<resources>
    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Theme -->
        <item name="mainBackground">@color/mainBackground</item>
        <item name="iconColor">@color/iconColor</item>
        <item name="textSecondary">@color/textSecondary</item>
        <item name="textPrimary">@color/textPrimary</item>
        <item name="dividerColor">@color/dividerColor</item>

        <item name="alphaIcons">0.5</item>
    </style>

    <style name="popupMenu" parent="@style/Widget.MPM.Menu">
        <item name="android:popupBackground">@drawable/bg_menu</item>
        <item name="mpm_activeIconColor">?attr/iconColor</item>
        <item name="mpm_primaryTextColor">?attr/textPrimary</item>
        <item name="mpm_secondaryTextColor">?attr/textSecondary</item>
        <item name="mpm_separatorColor">?attr/dividerColor</item>
    </style>

</resources>