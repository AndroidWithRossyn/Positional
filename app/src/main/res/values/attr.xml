<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="textPrimary" format="color" />
    <attr name="textSecondary" format="color" />
    <attr name="appAccent" format="color" />
    <attr name="iconColor" format="color" />
    <attr name="rippleColor" format="color" />
    <attr name="mainBackground" format="color" />
    <attr name="dividerColor" format="color" />
    <attr name="popupBackground" format="color" />
    <attr name="toolbarBackground" format="color" />
    <attr name="iconRegular" format="color" />
    <attr name="indicator" format="color" />
    <attr name="shadowColor" format="color" />
    <attr name="cardBackground" format="color" />

    <attr name="clockDialColor" format="color" />

    <attr name="alphaIcons" format="float" />

    <declare-styleable name="ParallaxImageView">
        <attr name="intensity" format="float" />
        <attr name="tiltSensitivity" format="float" />
        <attr name="forwardTiltOffset" format="float" />
        <attr name="scaledIntensity" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SmoothBottomBar">
        <attr name="menu" format="reference" />
        <attr name="backgroundColor" format="color" />
        <attr name="indicatorColor" format="color" />
        <attr name="indicatorRadius" format="dimension" />
        <attr name="sideMargins" format="dimension" />
        <attr name="itemPadding" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="itemFontFamily" format="reference" />
        <attr name="textSize" format="dimension" />
        <attr name="iconSize" format="dimension" />
        <attr name="iconMargin" format="dimension" />
        <attr name="iconTint" format="color" />
        <attr name="iconTintActive" format="color" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="activeItem" format="integer" />
        <attr name="duration" format="integer" />
    </declare-styleable>

    <attr name="SmoothBottomBarStyle" format="reference" />

    <declare-styleable name="Switcher">
        <attr name="switcher_on_color" format="color" />
        <attr name="switcher_off_color" format="color" />
        <attr name="switcher_icon_color" format="color" />
    </declare-styleable>

    <declare-styleable name="BounceBackViewPager">
        <!--
        determines the maximum amount of translation along the z-axis during the overscroll.
        Default is 150.
        -->
        <attr name="overscroll_translation" format="dimension" />

        <!-- Duration of animation when user releases the over scroll. Default is 400 ms. -->
        <attr name="overscroll_animation_duration" format="integer" />
    </declare-styleable>

</resources>