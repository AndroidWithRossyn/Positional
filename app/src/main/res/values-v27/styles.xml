<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Positional" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- This will fix purple status bar issue when app is launched-->
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAppAccent">@color/positional</item>
        <item name="colorAppAccentLight">@color/positional_light</item>

        <!-- Theme -->
        <item name="rippleColor">@color/rippleColor</item>
        <item name="android:navigationBarColor">@color/toolbarBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:colorEdgeEffect">?attr/colorAppAccent</item>
    </style>
</resources>