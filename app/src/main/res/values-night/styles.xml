<resources>
    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Theme -->
        <item name="mainBackground">@color/mainBackground</item>
        <item name="iconColor">@color/iconColor</item>
        <item name="textSecondary">@color/textSecondary</item>
        <item name="textPrimary">@color/textPrimary</item>
        <item name="dividerColor">@color/dividerColor</item>
        <item name="popupBackground">@color/popupBackground</item>
        <item name="toolbarBackground">@color/toolbarBackground</item>
        <item name="android:statusBarColor">@color/toolbarBackground</item>
        <item name="rippleColor">@color/rippleColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="cardBackground">#515151</item>
        <item name="clockDialColor">@color/clockDialColor</item>

        <item name="indicator">@color/indicator</item>
        <item name="iconRegular">@color/iconRegular</item>
        <item name="shadowColor">@color/shadowColor</item>

        <item name="alphaIcons">0.5</item>
    </style>

    <style name="popupMenu" parent="@style/Widget.MPM.Menu">
        <item name="android:popupBackground">@drawable/bg_menu</item>
        <item name="mpm_activeIconColor">?attr/iconColor</item>
        <item name="mpm_primaryTextColor">?attr/textPrimary</item>
        <item name="mpm_secondaryTextColor">?attr/textSecondary</item>
        <item name="mpm_separatorColor">?attr/dividerColor</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:colorEdgeEffect">?attr/appAccent</item>
    </style>
</resources>