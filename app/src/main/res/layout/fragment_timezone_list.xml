<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/toolbarBackground"
    android:clipChildren="false"
    android:clipToPadding="false">

    <app.simple.positional.decorations.searchview.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="15dp" />

    <app.simple.positional.decorations.views.CustomRecyclerView
        android:id="@+id/timezones_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fadeScrollbars="true"
        android:layoutAnimation="@anim/list_animation_controller"
        android:overScrollMode="always"
        android:scrollbarDefaultDelayBeforeFade="1500"
        android:scrollbars="vertical"
        app:statusBarPaddingRequired="false" />
</FrameLayout>

