<?xml version="1.0" encoding="utf-8"?>
<app.simple.positional.corners.DynamicCornerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/toolbarBackground"
    android:clipChildren="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/no_locations_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="60dp"
        android:adjustViewBounds="true"
        android:alpha="0"
        android:src="@drawable/art_empty"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:elevation="3dp"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/medium"
                android:text="@string/specified_data_list_locations"
                android:textColor="@color/textPrimary"
                android:textSize="8pt" />

            <ImageButton
                android:id="@+id/delete_locations"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:background="@drawable/ripple_btn"
                android:contentDescription="@string/delete_all"
                android:src="@drawable/ic_delete"
                android:tint="@color/iconColor" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dividerColor" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/locations_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fadeScrollbars="true"
            android:layoutAnimation="@anim/list_animation_controller"
            android:overScrollMode="always"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="@dimen/all_corner_radius"
            android:scrollbarDefaultDelayBeforeFade="1500"
            android:scrollbars="vertical" />
    </LinearLayout>

</app.simple.positional.corners.DynamicCornerFrameLayout>