<?xml version="1.0" encoding="utf-8"?>
<app.simple.positional.corners.DynamicCornerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/toolbarBackground"
    android:clipChildren="true"
    android:orientation="vertical"
    app:roundBottomCorners="true"
    app:roundTopCorners="true">

    <ImageView
        android:id="@+id/nothing_found"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:alpha="0"
        android:src="@drawable/ic_sentiment_very_dissatisfied"
        app:tint="?attr/indicator"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:elevation="3dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/search_timezone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/card_background"
                android:hint="@string/search_timezone"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLength="15"
                android:paddingHorizontal="15dp"
                android:textColor="?attr/textSecondary"
                android:textColorHint="?attr/dividerColor" />

            <TextView
                android:id="@+id/current_item_substring"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:fontFamily="@font/light"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="?attr/textPrimary"
                android:textSize="8pt" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dividerColor" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/timezones_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fadeScrollbars="true"
            android:layoutAnimation="@anim/list_animation_controller"
            android:overScrollMode="always"
            android:paddingTop="10dp"
            android:paddingBottom="@dimen/all_corner_radius"
            android:scrollbarDefaultDelayBeforeFade="1500"
            android:scrollbars="vertical" />
    </LinearLayout>

</app.simple.positional.corners.DynamicCornerFrameLayout>
