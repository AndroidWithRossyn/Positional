<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_behavior=".behaviors.MyAppBarLayoutBehavior">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <FrameLayout
                android:id="@+id/clock_layout"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.8"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed">

                <ImageView
                    android:layout_width="@dimen/clock_image_dimensions"
                    android:layout_height="@dimen/clock_image_dimensions"
                    android:layout_gravity="center"
                    android:src="@drawable/clock_background" />

                <ImageView
                    android:id="@+id/hour"
                    android:layout_width="@dimen/clock_image_dimensions"
                    android:layout_height="@dimen/clock_image_dimensions"
                    android:layout_gravity="center"
                    android:src="@drawable/clock_hour" />

                <ImageView
                    android:id="@+id/minutes"
                    android:layout_width="@dimen/clock_image_dimensions"
                    android:layout_height="@dimen/clock_image_dimensions"
                    android:layout_gravity="center"
                    android:src="@drawable/clock_minute" />

                <ImageView
                    android:id="@+id/seconds"
                    android:layout_width="@dimen/clock_image_dimensions"
                    android:layout_height="@dimen/clock_image_dimensions"
                    android:layout_gravity="center"
                    android:src="@drawable/clock_seconds" />

            </FrameLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/clock_panel_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="50dp"
        android:overScrollMode="never"
        android:paddingHorizontal="25dp"
        android:requiresFadingEdge="vertical"
        app:layout_behavior=".behaviors.OverScrollBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="25dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="end|center_vertical"
                    android:alpha="?attr/alphaIcons"
                    android:src="@drawable/ic_access_time" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Local Time"
                        android:textColor="?attr/textPrimary"
                        android:textSize="6pt" />

                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:id="@+id/digital_time_24_hour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="sans-serif-light"
                        android:maxLines="1"
                        android:textColor="?attr/textPrimary"
                        android:textSize="22pt"
                        app:corners="20"
                        app:use_gradient="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <com.elyeproj.loaderviewlibrary.LoaderTextView
                            android:id="@+id/digital_time_12_hour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="sans-serif-light"
                            android:maxLines="1"
                            android:textColor="?attr/textPrimary"
                            android:textSize="22pt"
                            app:corners="20"
                            app:use_gradient="true" />

                        <com.elyeproj.loaderviewlibrary.LoaderTextView
                            android:id="@+id/daytime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="sans-serif-light"
                            android:rotation="-90"
                            android:textColor="?attr/textSecondary"
                            android:textSize="8pt"
                            app:corners="20"
                            app:use_gradient="true" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Local Date"
                        android:textColor="?attr/textPrimary"
                        android:textSize="6pt" />

                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:id="@+id/today_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="sans-serif-light"
                        android:maxLines="1"
                        android:textColor="?attr/textPrimary"
                        android:textSize="22pt"
                        app:corners="20"
                        app:use_gradient="true" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Local Time Zone"
                        android:textColor="?attr/textPrimary"
                        android:textSize="6pt" />

                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:id="@+id/time_zone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="?attr/textPrimary"
                        android:textSize="22pt"
                        app:corners="20"
                        app:use_gradient="true" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Time Zone UTC"
                        android:textColor="?attr/textPrimary"
                        android:textSize="6pt" />

                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:id="@+id/time_zone_UTC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="?attr/textPrimary"
                        android:textSize="22pt"
                        app:corners="20"
                        app:use_gradient="true" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="UTC Time"
                        android:textColor="?attr/textPrimary"
                        android:textSize="6pt" />

                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:id="@+id/time_UTC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="?attr/textPrimary"
                        android:textSize="22pt"
                        app:corners="20"
                        app:use_gradient="true" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="UTC Date"
                        android:textColor="?attr/textPrimary"
                        android:textSize="6pt" />

                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:id="@+id/date_UTC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="?attr/textPrimary"
                        android:textSize="22pt"
                        app:corners="20"
                        app:use_gradient="true" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Sun Position"
                        android:textColor="?attr/textPrimary"
                        android:textSize="6pt" />

                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:id="@+id/sun_azimuth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="sans-serif-light"
                        android:maxLines="1"
                        android:textColor="?attr/textPrimary"
                        android:textSize="8pt"
                        app:corners="20"
                        app:use_gradient="true" />

                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:id="@+id/sun_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="sans-serif-light"
                        android:maxLines="1"
                        android:textColor="?attr/textPrimary"
                        android:textSize="8pt"
                        app:corners="20"
                        app:use_gradient="true" />

                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:id="@+id/sun_altitude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="sans-serif-light"
                        android:maxLines="1"
                        android:textColor="?attr/textPrimary"
                        android:textSize="8pt"
                        app:corners="20"
                        app:use_gradient="true" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="end"
                    android:alpha="?attr/alphaIcons"
                    android:src="@drawable/ic_sunrise" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Sunrise"
                        android:textColor="?attr/textPrimary"
                        android:textSize="6pt" />

                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:id="@+id/sunrise_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-light"
                        android:maxLines="1"
                        android:textColor="?attr/textPrimary"
                        android:textSize="22pt"
                        app:corners="20"
                        app:use_gradient="true" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="end"
                    android:alpha="?attr/alphaIcons"
                    android:src="@drawable/ic_sunset" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Sunset"
                        android:textColor="?attr/textPrimary"
                        android:textSize="6pt" />

                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:id="@+id/sunset_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="sans-serif-light"
                        android:maxLines="1"
                        android:textColor="?attr/textPrimary"
                        android:textSize="22pt"
                        app:corners="20"
                        app:use_gradient="true" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

