<?xml version="1.0" encoding="utf-8"?>
<app.simple.positional.corners.DynamicCornerLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/toolbarBackground"
    android:orientation="vertical"
    app:roundTopCorners="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/options_item_padding"
        android:fontFamily="@font/medium"
        android:padding="@dimen/options_item_padding"
        android:text="Uh Ohh !!"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/options_header_text_size"
        tools:ignore="HardcodedText" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dividerColor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/options_item_padding"
        android:layout_weight="1"
        android:fontFamily="@font/regular"
        android:padding="@dimen/options_item_padding"
        android:text="@string/play_services_issue"
        android:textColor="@color/textSecondary"
        android:textSize="@dimen/description_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dividerColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/play_services_issue_positive_reminder_checkbox"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginHorizontal="10dp"
            android:buttonTint="@color/iconColor"
            android:checked="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/regular"
            android:text="@string/show_again"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/options_item_text_size" />

        <Button
            android:id="@+id/play_services_issue_positive_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ripple_btn"
            android:fontFamily="@font/medium"
            android:text="@string/button_ok"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/options_item_text_size" />

    </LinearLayout>

</app.simple.positional.corners.DynamicCornerLinearLayout>
