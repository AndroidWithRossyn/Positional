<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@android:color/transparent">

    <app.simple.positional.decorations.corners.DynamicCornerLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/options_container_horizontal_padding"
        android:backgroundTint="@color/toolbarBackground"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="40dp"
        android:orientation="vertical"
        android:padding="@dimen/options_container_horizontal_padding">

        <app.simple.positional.decorations.ripple.DynamicRippleLinearLayout
            android:id="@+id/gps_menu_show_label_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_btn"
            android:clickable="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="true"
            android:orientation="horizontal"
            android:padding="@dimen/options_item_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="@dimen/options_text_margin_start"
                android:fontFamily="@font/regular"
                android:gravity="center_vertical"
                android:text="@string/show_label"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/options_item_text_size"
                app:drawableStartCompat="@drawable/ic_label"
                app:drawableTint="@color/iconRegular" />

            <app.simple.positional.decorations.switchview.SwitchView
                android:id="@+id/toggle_label"
                android:layout_width="@dimen/switch_width"
                android:layout_height="wrap_content" />

        </app.simple.positional.decorations.ripple.DynamicRippleLinearLayout>

        <app.simple.positional.decorations.ripple.DynamicRippleLinearLayout
            android:id="@+id/gps_menu_high_contrast_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_btn"
            android:clickable="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="true"
            android:orientation="horizontal"
            android:padding="@dimen/options_item_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="@dimen/options_text_margin_start"
                android:fontFamily="@font/regular"
                android:gravity="center_vertical"
                android:text="@string/high_contrast_mode"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/options_item_text_size"
                app:drawableLeftCompat="@drawable/ic_filter_b_and_w"
                app:drawableTint="@color/iconRegular" />

            <app.simple.positional.decorations.switchview.SwitchView
                android:id="@+id/toggle_high_contrast"
                android:layout_width="@dimen/switch_width"
                android:layout_height="wrap_content" />

        </app.simple.positional.decorations.ripple.DynamicRippleLinearLayout>

        <app.simple.positional.decorations.ripple.DynamicRippleLinearLayout
            android:id="@+id/gps_menu_show_building_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_btn"
            android:clickable="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="true"
            android:orientation="horizontal"
            android:padding="@dimen/options_item_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="@dimen/options_text_margin_start"
                android:fontFamily="@font/regular"
                android:gravity="center_vertical"
                android:text="@string/show_building"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/options_item_text_size"
                app:drawableLeftCompat="@drawable/ic_home"
                app:drawableTint="@color/iconRegular" />

            <app.simple.positional.decorations.switchview.SwitchView
                android:id="@+id/toggle_buildings"
                android:layout_width="@dimen/switch_width"
                android:layout_height="wrap_content" />

        </app.simple.positional.decorations.ripple.DynamicRippleLinearLayout>

        <app.simple.positional.decorations.ripple.DynamicRippleLinearLayout
            android:id="@+id/gps_menu_bearing_rotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_btn"
            android:clickable="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="true"
            android:orientation="horizontal"
            android:padding="@dimen/options_item_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="@dimen/options_text_margin_start"
                android:fontFamily="@font/regular"
                android:gravity="center_vertical"
                android:text="@string/bearing_rotation"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/options_item_text_size"
                app:drawableLeftCompat="@drawable/ic_bearing_rotation"
                app:drawableTint="@color/iconRegular" />

            <app.simple.positional.decorations.switchview.SwitchView
                android:id="@+id/toggle_bearing_rotation"
                android:layout_width="@dimen/switch_width"
                android:layout_height="wrap_content" />

        </app.simple.positional.decorations.ripple.DynamicRippleLinearLayout>

        <app.simple.positional.decorations.ripple.DynamicRippleLinearLayout
            android:id="@+id/gps_menu_compass_rotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_btn"
            android:clickable="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="true"
            android:orientation="horizontal"
            android:padding="@dimen/options_item_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="@dimen/options_text_margin_start"
                android:fontFamily="@font/regular"
                android:gravity="center_vertical"
                android:text="@string/compass"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/options_item_text_size"
                app:drawableLeftCompat="@drawable/ic_compass"
                app:drawableTint="@color/iconRegular" />

            <app.simple.positional.decorations.switchview.SwitchView
                android:id="@+id/toggle_compass_rotation"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/switch_width"
                android:layout_height="wrap_content" />

        </app.simple.positional.decorations.ripple.DynamicRippleLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginVertical="@dimen/options_sub_item_padding"
            android:background="@color/dividerColor" />

        <app.simple.positional.decorations.ripple.DynamicRippleLinearLayout
            android:id="@+id/gps_menu_satellite_mode_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_btn"
            android:clickable="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="true"
            android:orientation="horizontal"
            android:padding="@dimen/options_item_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="@dimen/options_text_margin_start"
                android:fontFamily="@font/regular"
                android:gravity="center_vertical"
                android:text="@string/satellite_mode"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/options_item_text_size"
                app:drawableLeftCompat="@drawable/ic_satellite"
                app:drawableTint="@color/iconRegular" />

            <app.simple.positional.decorations.switchview.SwitchView
                android:id="@+id/toggle_satellite"
                android:layout_width="@dimen/switch_width"
                android:layout_height="wrap_content" />

        </app.simple.positional.decorations.ripple.DynamicRippleLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginVertical="@dimen/options_sub_item_padding"
            android:background="@color/dividerColor" />

        <app.simple.positional.decorations.ripple.DynamicRippleLinearLayout
            android:id="@+id/gps_menu_auto_center_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_btn"
            android:clickable="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="true"
            android:orientation="horizontal"
            android:padding="@dimen/options_item_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="@dimen/options_text_margin_start"
                android:fontFamily="@font/regular"
                android:gravity="center_vertical"
                android:text="@string/auto_center_map"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/options_item_text_size"
                app:drawableLeftCompat="@drawable/ic_gps_fixed"
                app:drawableTint="@color/iconRegular" />

            <app.simple.positional.decorations.switchview.SwitchView
                android:id="@+id/toggle_auto_center"
                android:layout_width="@dimen/switch_width"
                android:layout_height="wrap_content" />

        </app.simple.positional.decorations.ripple.DynamicRippleLinearLayout>

        <app.simple.positional.decorations.ripple.DynamicRippleLinearLayout
            android:id="@+id/gps_menu_volume_keys_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_btn"
            android:clickable="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="true"
            android:orientation="horizontal"
            android:padding="@dimen/options_item_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="@dimen/options_text_margin_start"
                android:fontFamily="@font/regular"
                android:gravity="center_vertical"
                android:text="@string/use_media_keys"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/options_item_text_size"
                app:drawableLeftCompat="@drawable/ic_zoom_in"
                app:drawableTint="@color/iconRegular" />

            <app.simple.positional.decorations.switchview.SwitchView
                android:id="@+id/toggle_use_volume_keys"
                android:layout_width="@dimen/switch_width"
                android:layout_height="wrap_content" />

        </app.simple.positional.decorations.ripple.DynamicRippleLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginVertical="@dimen/options_sub_item_padding"
            android:background="@color/dividerColor" />

        <app.simple.positional.decorations.ripple.DynamicRippleTextView
            android:id="@+id/gps_pin_customization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_place_notification"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawablePadding="@dimen/options_text_margin_start"
            android:drawableTint="@color/iconRegular"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:padding="@dimen/options_item_padding"
            android:text="@string/customize_pin"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/options_item_text_size" />

    </app.simple.positional.decorations.corners.DynamicCornerLinearLayout>

</FrameLayout>
