<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/containers"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <app.simple.positional.decorations.corners.DynamicCornerFrameLayout
        android:id="@+id/bottom_bar_wrapper"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_nav_height"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/toolbarBackground"
        android:elevation="20dp"
        app:roundTopCorners="true"
        app:roundBottomCorners="false">

        <app.simple.positional.smoothbottombar.SmoothBottomBar
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_nav_height"
            android:layout_gravity="bottom"
            android:elevation="3dp"
            app:backgroundColor="@android:color/transparent"
            app:cornerRadius="@dimen/all_corner_radius"
            app:duration="500"
            app:iconSize="20dp"
            app:iconTint="@color/iconRegular"
            app:iconTintActive="@color/iconColor"
            app:indicatorColor="@color/indicator"
            app:indicatorRadius="@dimen/all_corner_radius"
            app:itemFontFamily="@font/light"
            app:menu="@menu/toolbar_items"
            app:textColor="@color/textSecondary"
            app:textSize="4pt" />
    </app.simple.positional.decorations.corners.DynamicCornerFrameLayout>

</merge>