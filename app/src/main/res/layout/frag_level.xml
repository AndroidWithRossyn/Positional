<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/indicator_bounding_box"
    android:layout_width="match_parent"
    android:clipToPadding="false"
    android:layout_marginBottom="@dimen/bottom_nav_height"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_level" />

    <ImageView
        android:id="@+id/level_indicator"
        tools:ignore="ContentDescription"
        android:layout_width="@dimen/level_indicator"
        android:layout_height="@dimen/level_indicator"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/level_dot"
        tools:ignore="ContentDescription"
        android:layout_width="@dimen/level_dot"
        android:layout_height="@dimen/level_dot"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/level_x"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/light"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/level_text_size" />

        <TextView
            android:id="@+id/level_y"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/light"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/level_text_size" />

    </LinearLayout>

</FrameLayout>

