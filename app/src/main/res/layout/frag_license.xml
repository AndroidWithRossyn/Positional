<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/licence_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/light"
            android:text="Verifying License"
            android:textColor="?attr/textPrimary"
            android:textSize="@dimen/license_text_size" />

        <ImageView
            android:id="@+id/licence_loader"
            android:layout_width="@dimen/license_check_indicator_dimen"
            android:layout_height="@dimen/license_check_indicator_dimen"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_loader"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <TextView
        android:id="@+id/invalid_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:fontFamily="@font/regular"
        android:gravity="center"
        android:textColor="?attr/textSecondary"
        android:textSize="@dimen/description_text_size"
        android:visibility="gone" />
</FrameLayout>