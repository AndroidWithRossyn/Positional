<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <FrameLayout
        android:id="@+id/dial_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clipChildren="false"
        android:clipToPadding="false">

        <app.simple.positional.parallax.ParallaxView
            android:id="@+id/dial"
            android:layout_width="@dimen/compass_dial"
            android:layout_height="@dimen/compass_dial"
            android:tint="?attr/iconColor" />

    </FrameLayout>

    <app.simple.positional.parallax.ParallaxView
        android:id="@+id/compass_needle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/compass_needle"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />
</FrameLayout>