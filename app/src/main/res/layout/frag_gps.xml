<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/gps_layout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.8"
        app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed">

        <ImageView
            android:id="@+id/gps_range_indicator"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/gps_range" />

        <ImageView
            android:id="@+id/gps_scanned_indicator"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/gps_scanned" />

        <ImageView
            android:id="@+id/gps_dot"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:src="@drawable/gps_location_dot" />

    </FrameLayout>

    <include layout="@layout/frag_gps_list" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>