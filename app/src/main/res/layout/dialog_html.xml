<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <app.simple.positional.corners.DynamicCornerCoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_height"
        android:layout_margin="@dimen/options_container_horizontal_padding"
        android:backgroundTint="@color/toolbarBackground"
        android:elevation="40dp">

        <app.simple.positional.corners.DynamicCornersNestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="vertical"
            android:fadingEdgeLength="25dp"
            android:requiresFadingEdge="vertical"
            android:backgroundTint="@color/toolbarBackground"
            app:layout_behavior="app.simple.positional.behaviors.OverScrollBehavior">

            <WebView
                android:id="@+id/web_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </app.simple.positional.corners.DynamicCornersNestedScrollView>
    </app.simple.positional.corners.DynamicCornerCoordinatorLayout>
</FrameLayout>
