<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_bar_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp">

    <app.simple.positional.decorations.corners.DynamicCornerFrameLayout
        android:id="@+id/bottom_bar_item_background"
        android:layout_width="@dimen/app_button_size"
        android:layout_height="@dimen/bottom_nav_height"
        android:layout_gravity="center_vertical"
        android:backgroundTint="@color/indicator"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/bottom_bar_item"
        android:layout_width="@dimen/app_button_size"
        android:layout_height="@dimen/app_button_size"
        android:layout_gravity="center"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_clock"
        app:tint="@color/iconRegular"
        tools:ignore="ContentDescription" />
</FrameLayout>
