<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/mainBackground"
    android:elevation="@dimen/app_views_elevation"
    android:orientation="horizontal"
    android:padding="5dp"
    tools:parentTag="android.widget.LinearLayout">

    <app.simple.positional.decorations.ripple.DynamicRippleImageButton
        android:id="@+id/tools_align_btn"
        android:layout_width="@dimen/app_button_size"
        android:layout_height="20dp"
        android:src="@drawable/ic_arrow_right"
        android:tint="@color/iconColor"
        android:visibility="gone" />

    <app.simple.positional.decorations.views.LocationButton
        android:id="@+id/current_location"
        android:layout_width="0dp"
        android:layout_height="@dimen/app_button_size"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:src="@drawable/ic_gps_not_fixed"
        android:tint="@color/iconColor" />

    <app.simple.positional.decorations.ripple.DynamicRippleImageButton
        android:id="@+id/wrap_unwrap_flags"
        android:layout_width="0dp"
        android:layout_height="@dimen/app_button_size"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:src="@drawable/ic_full_screen"
        android:tint="@color/iconColor" />

    <app.simple.positional.decorations.ripple.DynamicRippleImageButton
        android:id="@+id/compass"
        android:layout_width="0dp"
        android:layout_height="@dimen/app_button_size"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:src="@drawable/ic_compass_on"
        android:tint="@color/iconColor" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="2dp"
        android:background="@color/dividerColor" />

    <app.simple.positional.decorations.ripple.DynamicRippleImageButton
        android:id="@+id/add_flag"
        android:layout_width="0dp"
        android:layout_height="@dimen/app_button_size"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:src="@drawable/ic_add_location"
        android:tint="@color/iconColor" />

    <app.simple.positional.decorations.ripple.DynamicRippleImageButton
        android:id="@+id/remove_flag"
        android:layout_width="0dp"
        android:layout_height="@dimen/app_button_size"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:src="@drawable/ic_backspace"
        android:tint="@color/iconColor" />

</merge>